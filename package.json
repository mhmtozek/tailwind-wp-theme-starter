{
  "name": "gabfire_2026",
  "version": "1.0.0",
  "description": "WordPress theme with Tailwind + Sass",
  "type": "module",
  "scripts": {
    "dev:sass": "sass src/scss/main.scss src/scss/main.css --watch",
    "dev:tw": "postcss src/css/input.css -o dist/css/style.css --watch",
    "dev": "npm-run-all --parallel dev:sass dev:tw",
    "build:sass": "sass src/scss/main.scss src/scss/main.css --style=compressed",
    "build:tw": "postcss src/css/input.css -o dist/css/style.css --verbose",
    "build": "npm-run-all build:sass build:tw"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.97.1",
    "tailwindcss": "^4.1.18"
  }
}
